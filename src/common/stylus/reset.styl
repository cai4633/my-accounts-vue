*
  margin 0
  padding 0
  line-height 1.2
  box-sizing border-box

  &::-webkit-scrollbar
    display none

li
  list-style none

a
  color inherit
  text-decoration none

button
  background inherit
  outline none
  border none

:focus
  outline none

input
  border none
  background-color inherit

h1, h2, h3, h5
  font-weight normal
